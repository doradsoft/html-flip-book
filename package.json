{
	"name": "html-flip-book",
	"version": "0.0.0-alpha.26",
	"description": "Flipbook component for HTML",
	"homepage": "https://doradsoft.github.io/html-flip-book/",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/doradsoft/html-flip-book.git"
	},
	"bugs": {
		"url": "https://github.com/doradsoft/html-flip-book/issues"
	},
	"type": "module",
	"engines": {
		"node": ">=24.0.0"
	},
	"scripts": {
		"prepare": "husky",
		"postinstall": "cd ./base && npm install && cd ../react && npm install && cd ./example && npm install",
		"update": "npx npm-check-updates --peer --deep -u && npm install",
		"build": "npm run build:base && npm run build:react",
		"build:base": "cross-env BUILD_TARGET=base vite build && tsc -p base/tsconfig.json --emitDeclarationOnly",
		"build:react": "npm run build:base && cross-env BUILD_TARGET=react vite build && tsc -p react/tsconfig.json --emitDeclarationOnly",
		"build:example": "cd react/example && npm run build",
		"dev": "cd react/example && npm run dev",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"coverage:unit": "vitest run --coverage",
		"coverage:e2e": "playwright test",
		"coverage:merge": "tsx scripts/merge-coverage.mts",
		"coverage:badge": "make-coverage-badge --report-path .coverage/unit/coverage-summary.json --output-path ./badges/coverage.svg",
		"format:write": "biome format --write .",
		"format:check": "biome format .",
		"lint": "biome lint .",
		"check": "biome check .",
		"ci-test": "vitest run --coverage && playwright test && npm run coverage:merge",
		"all": "npm run check && npm run test:coverage && npm run build",
		"docs": "typedoc",
		"release": "tsx scripts/release.mts",
		"release:patch": "tsx scripts/release.mts patch",
		"release:minor": "tsx scripts/release.mts minor",
		"release:major": "tsx scripts/release.mts major"
	},
	"author": "DoradSoft",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@playwright/test": "^1.58.2",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/react": "^16.3.2",
		"@types/node": "^25.2.2",
		"@types/react": "^19.2.13",
		"@types/react-dom": "^19.2.3",
		"@types/semver": "^7.7.1",
		"@vitejs/plugin-react-swc": "^4.2.3",
		"@vitest/coverage-istanbul": "^4.0.18",
		"cross-env": "^10.1.0",
		"happy-dom": "^20.6.0",
		"husky": "^9.1.7",
		"make-coverage-badge": "^1.2.0",
		"monocart-reporter": "^2.10.0",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"sass": "^1.97.3",
		"semver": "^7.7.4",
		"tsx": "^4.21.0",
		"typedoc": "^0.28.16",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vite-plugin-dts": "^4.5.4",
		"vitest": "^4.0.18"
	}
}
