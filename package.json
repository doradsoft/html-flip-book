{
  "name": "html-flip-book",
  "version": "1.0.0",
  "description": "Flipbook component for HTML",
  "homepage": "https://doradsoft.github.io/html-flip-book/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/doradsoft/html-flip-book.git"
  },
  "bugs": {
    "url": "https://github.com/doradsoft/html-flip-book/issues"
  },
  "type": "module",
  "engines": {
    "node": ">=22.2.0"
  },
  "scripts": {
    "postinstall": "cd ./base && npm install && cd ../react && npm install && cd ./example && npm install",
    "update": "npx npm-check-updates --peer --deep -u && npm install",
    "build": "npm run build:base && npm run build:react",
    "build:base": "cross-env BUILD_TARGET=base vite build",
    "build:react": "cross-env BUILD_TARGET=react vite build",
    "build:example": "cd react/example && npm run build",
    "dev": "cd react/example && npm run dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "coverage:unit": "vitest run --coverage",
    "coverage:e2e": "playwright test",
    "coverage:merge": "tsx scripts/merge-coverage.mts",
    "coverage:badge": "make-coverage-badge --report-path .coverage/unit/coverage-summary.json --output-path ./badges/coverage.svg",
    "format:write": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint -c ./eslint.config.mjs",
    "ci-test": "vitest run --coverage && playwright test && npm run coverage:merge",
    "all": "npm run format:write && npm run lint && npm run test:coverage && npm run build"
  },
  "author": "DoradSoft",
  "license": "MIT",
  "devDependencies": {
    "@eslint/compat": "^2.0.1",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "@vitest/coverage-istanbul": "^4.0.17",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^17.0.0",
    "happy-dom": "^20.3.4",
    "make-coverage-badge": "^1.2.0",
    "monocart-reporter": "^2.9.23",
    "prettier": "^3.8.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sass": "^1.97.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.17"
  }
}
